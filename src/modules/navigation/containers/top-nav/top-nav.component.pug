ng-container(*ngIf='!rtl')
    nav.topnav.navbar.navbar-expand.shadow.navbar-light.bg-white
        a.navbar-brand(routerLink='/dashboard')
            | SB Admin Pro

        button#sidebarToggle.btn.btn-icon.btn-transparent-dark.order-1.order-lg-0.mr-lg-2(
            data-cy='topNavToggleSideNav',
            (click)='toggleSideNav()'
        )
            i-feather(name='menu')

        sbpro-top-nav-search

        ul.navbar-nav.align-items-center.ml-auto
            sbpro-top-nav-docs
            sbpro-top-nav-alerts
            sbpro-top-nav-messages
            sbpro-top-nav-user

ng-container(*ngIf='rtl')
    nav.pr-3.pr-lg-0.pl-3.topnav.navbar.navbar-expand.shadow.navbar-light.bg-white
        ul.navbar-nav.align-items-center.mr-auto
            sbpro-top-nav-user(placement='bottom-left')
            sbpro-top-nav-messages(placement='bottom-left')
            sbpro-top-nav-alerts(placement='bottom-left')
            sbpro-top-nav-docs(placement='bottom-left')
        
        sbpro-top-nav-search.ml-auto.d-none.d-lg-block

        button#sidebarToggle.btn.btn-icon.btn-transparent-dark.order-1.order-lg-0.ml-lg-2.ml-2(
            data-cy='topNavToggleSideNav',
            (click)='toggleSideNav()'
        )
            i-feather(name='menu')

        a.navbar-brand.text-right.d-none.d-sm-block(routerLink='/dashboard')
            | SB Admin Pro        
